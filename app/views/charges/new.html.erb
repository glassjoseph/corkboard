<div>
<br>
<center><%= form_tag charges_path do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <label class="amount">
      <span>Enter your payment details to submit your bid</span>
    </label>
  </article></br>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="A bid on a Corkboard project"
          data-amount="200"
          data-locale="auto"></script>
<% end %></center>
</div>
